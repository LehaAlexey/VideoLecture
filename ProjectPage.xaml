<UserControl x:Class="VideoLecture.ProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="ProjectPageController">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название проекта:" FontWeight="Bold" />
            <TextBlock Text="{Binding Name}" FontSize="14" Margin="0,0,0,10" />

            <Button Content="Выбрать размеченный текст" Click="ChooseText_Click"/>
            <Button Content="Выбрать озвучку" Click="ChooseAudio_Click"/>
            <Button Content="Выбрать файл презентации" Click="ChoosePdf_Click"/>
            <Button Content="Выбрать Фото преопдавателя" Click="ChoosePhoto_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
