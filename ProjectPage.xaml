<UserControl x:Class="VideoLecture.ProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="ProjectPageController" Width="500">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="0, 10, 0, 0" Grid.ColumnSpan="2">
            <TextBlock Text="Название проекта:" FontWeight="Bold" />
            <TextBlock Text="{Binding Name}" FontSize="14" Margin="0,0,0,10" />

            <Button Content="Выбрать размеченный текст" Click="ChooseText_Click" Margin="3, 3, 325, 10"/>
            <Button Content="Выбрать файл презентации" Click="ChoosePdf_Click" Margin="3, 3, 3, 32s5"/>
            <Button Content="Выбрать файл аудиозаписи" Click="ChooseAudio_Click" Margin="3, 3, 325, 10"/>
            <Button Content="Выбрать Фото преопдавателя" Click="ChoosePhoto_Click" Margin="3, 3, 3, 30"/>

            <Button Content="Запустить генерацию" Click="ChooseText_Click" Margin="3, 3, 3, 10"/>

        </StackPanel>
        <StackPanel Margin="149,6,-409,4" Background="#FFBDBDBD" Grid.Column="1">
            <MediaElement x:Name="VideoControl" Width="400" Height="225" OpacityMask="#FF5F5F5F">
                <!--16:9 -->


            </MediaElement>
        </StackPanel>
    </Grid>
</UserControl>
