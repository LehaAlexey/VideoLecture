<Window x:Class="VideoLecture.Pages.AddEditLecture"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoLecture.Pages"
        mc:Ignorable="d"
        Title="AddEditLecture" Height="200" Width="300" ResizeMode="NoResize">
    <!--Добавление видеолектора-->
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Button Grid.Column="0" Content="Файл голоса" Click="SetAudio_Click" Margin="0,30,0,10"/>
                <Button Grid.Column="0" Content="Фото преопдавателя" Click="SetPhoto_Click" Margin="30,30,0,10"/>
            </StackPanel>
            <Label Content="Введите название образа:" Margin="6,9,6,0" />
            <TextBox x:Name="LectureNameTextBox" Margin="9,0,9,9" TextChanged="LectureNameChanged"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Button x:Name="AddEditButton" Grid.Column="0" Content="Добавить" Click="AddEditLecture_Click" Margin="0,20,20,0"/>
                <Button Grid.Column="0" x:Name="CancelButton" Content="Отмена" Click="Cancel_Click" Margin="20,20,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
